<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.symverse.symwallet.sdk.sample.MainActivity">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Paid API"
        android:textSize="18sp"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/etStoreId"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintVertical_bias="0"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"/>

    <!-- store id -->
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvStoreIdLabel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Store ID"
        android:textSize="14sp"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/etStoreId"
        app:layout_constraintTop_toTopOf="@+id/etStoreId"
        app:layout_constraintBottom_toBottomOf="@+id/etStoreId"
        app:layout_constraintHorizontal_bias="0"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/etStoreId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Optional"
        android:textSize="12sp"
        android:textColor="@color/colorAccent"
        android:textStyle="bold"
        app:switchPadding="50dp"
        app:layout_constraintLeft_toRightOf="@+id/tvStoreIdLabel"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTitle"
        app:layout_constraintBottom_toTopOf="@+id/etStoreName"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintHorizontal_bias="1"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>

    <!-- store name -->
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvStoreNameLabel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Store Name"
        android:textSize="14sp"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/etStoreName"
        app:layout_constraintTop_toTopOf="@+id/etStoreName"
        app:layout_constraintBottom_toBottomOf="@+id/etStoreName"
        app:layout_constraintHorizontal_bias="0"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/etStoreName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Optional"
        android:textSize="12sp"
        android:textColor="@color/colorAccent"
        android:textStyle="bold"
        app:switchPadding="50dp"
        app:layout_constraintLeft_toRightOf="@+id/tvStoreNameLabel"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etStoreId"
        app:layout_constraintBottom_toTopOf="@+id/etItemId"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintHorizontal_bias="1"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>

    <!-- item id -->
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvItemIdLabel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Item ID"
        android:textSize="14sp"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/etItemId"
        app:layout_constraintTop_toTopOf="@+id/etItemId"
        app:layout_constraintBottom_toBottomOf="@+id/etItemId"
        app:layout_constraintHorizontal_bias="0"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/etItemId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:hint="Required"
        android:textSize="12sp"
        android:textColor="@color/colorAccent"
        android:textStyle="bold"
        app:switchPadding="50dp"
        app:layout_constraintLeft_toRightOf="@+id/tvItemIdLabel"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etStoreName"
        app:layout_constraintBottom_toTopOf="@+id/etItemName"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintHorizontal_bias="1"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>

    <!-- item name -->
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvItemNameLabel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Item Name"
        android:textSize="14sp"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/etItemName"
        app:layout_constraintTop_toTopOf="@+id/etItemName"
        app:layout_constraintBottom_toBottomOf="@+id/etItemName"
        app:layout_constraintHorizontal_bias="0"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/etItemName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Optional"
        android:textSize="12sp"
        android:textColor="@color/colorAccent"
        android:textStyle="bold"
        app:switchPadding="50dp"
        app:layout_constraintLeft_toRightOf="@+id/tvItemNameLabel"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etItemId"
        app:layout_constraintBottom_toTopOf="@+id/etWalletId"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintHorizontal_bias="1"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>

    <!-- wallet id -->
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvWalletIdLabel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Wallet ID"
        android:textSize="14sp"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/etWalletId"
        app:layout_constraintTop_toTopOf="@+id/etWalletId"
        app:layout_constraintBottom_toBottomOf="@+id/etWalletId"
        app:layout_constraintHorizontal_bias="0"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/etWalletId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0x000000000001"
        android:hint="Required"
        android:textSize="12sp"
        android:textColor="@color/colorAccent"
        android:textStyle="bold"
        app:switchPadding="50dp"
        app:layout_constraintLeft_toRightOf="@+id/tvWalletIdLabel"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etItemName"
        app:layout_constraintBottom_toTopOf="@+id/etToAddress"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintHorizontal_bias="1"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>

    <!-- to address -->
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvToAddressLabel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="To Address"
        android:textSize="14sp"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/etToAddress"
        app:layout_constraintTop_toTopOf="@+id/etToAddress"
        app:layout_constraintBottom_toBottomOf="@+id/etToAddress"
        app:layout_constraintHorizontal_bias="0"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/etToAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0x00025b5d565b1ac00002"
        android:hint="Required"
        android:textSize="12sp"
        android:textColor="@color/colorAccent"
        android:textStyle="bold"
        app:switchPadding="50dp"
        app:layout_constraintLeft_toRightOf="@+id/tvToAddressLabel"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etWalletId"
        app:layout_constraintBottom_toTopOf="@+id/etValue"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintHorizontal_bias="1"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>

    <!-- value -->
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvValueLabel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Value (>=0)"
        android:textSize="14sp"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/etValue"
        app:layout_constraintTop_toTopOf="@+id/etValue"
        app:layout_constraintBottom_toBottomOf="@+id/etValue"
        app:layout_constraintHorizontal_bias="0"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/etValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:hint="Optional"
        android:digits="01234567890."
        android:inputType="numberDecimal"
        android:textSize="12sp"
        android:textColor="@color/colorAccent"
        android:textStyle="bold"
        app:switchPadding="50dp"
        app:layout_constraintLeft_toRightOf="@+id/tvValueLabel"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etToAddress"
        app:layout_constraintBottom_toTopOf="@+id/etQuantities"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintHorizontal_bias="1"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>

    <!-- quantities -->
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvQuantitiesLabel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Quantities (>= 1)"
        android:textSize="14sp"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/etQuantities"
        app:layout_constraintTop_toTopOf="@+id/etQuantities"
        app:layout_constraintBottom_toBottomOf="@+id/etQuantities"
        app:layout_constraintHorizontal_bias="0"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/etQuantities"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:hint="Optional"
        android:digits="01234567890"
        android:inputType="numberDecimal"
        android:textSize="12sp"
        android:textColor="@color/colorAccent"
        android:textStyle="bold"
        app:switchPadding="50dp"
        app:layout_constraintLeft_toRightOf="@+id/tvQuantitiesLabel"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etValue"
        app:layout_constraintBottom_toTopOf="@+id/etDiscount"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintHorizontal_bias="1"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>

    <!-- Discount -->
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvDiscountLabel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Discount (>= 0)"
        android:textSize="14sp"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/etDiscount"
        app:layout_constraintTop_toTopOf="@+id/etDiscount"
        app:layout_constraintBottom_toBottomOf="@+id/etDiscount"
        app:layout_constraintHorizontal_bias="0"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/etDiscount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:hint="Optional"
        android:digits="01234567890."
        android:inputType="numberDecimal"
        android:textSize="12sp"
        android:textColor="@color/colorAccent"
        android:textStyle="bold"
        app:switchPadding="50dp"
        app:layout_constraintLeft_toRightOf="@+id/tvDiscountLabel"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etQuantities"
        app:layout_constraintBottom_toTopOf="@+id/btnRequest"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintHorizontal_bias="1"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnRequest"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Request"
        android:textSize="14sp"
        android:textColor="@color/colorAccent"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTitle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="1"
        app:layout_constraintHorizontal_bias="0"
        android:layout_margin="20dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>